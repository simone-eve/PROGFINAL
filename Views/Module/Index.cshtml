@model IEnumerable<PROG6212POE.Models.Module>

@{
    ViewData["Title"] = "Index";
}

<h1>View Modules</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModuleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeeklyHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SelfStudyHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSelfStudyHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekDayName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfCredits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeeklyHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelfStudyHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSelfStudyHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeekDayName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ModuleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ModuleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ModuleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
